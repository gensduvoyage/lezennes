{
	"name": "lezennes",
	"version": "1.0.0",
	"description": "lezennes",
	"type": "module",
	"author": "Valentin Degenne <vdegenne@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": ""
	},
	"devDependencies": {
		"@material/web": "^2.3.0",
		"@snar/lit": "^1.7.1",
		"@tailwindcss/postcss": "^4.1.10",
		"@vdegenne/about-dialog": "^0.4.2",
		"@vdegenne/debouncer": "^1.0.3",
		"@vdegenne/material-color-helpers": "^1.11.1",
		"@vdegenne/mini-rest": "^0.2.1",
		"@vdegenne/rollup-plugin-minify-html": "^1.0.6",
		"custom-element-decorator": "^0.6.0",
		"html-vision": "^0.3.2",
		"lit": "^3.3.0",
		"lit-with-styles": "^2.1.3",
		"material-3-prompt-dialog": "^1.0.1",
		"material-shell": "^1.3.0",
		"rollup-plugin-material-all": "^1.2.2",
		"rollup-plugin-minify-template-literals": "^1.1.7",
		"snar": "^2.3.1",
		"snar-save-to-local-storage": "^1.0.1",
		"tailwindcss": "^4.1.10",
		"toastit": "^2.2.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-plugin-mdicon2svg": "^0.2.0",
		"vscode-ui-connector": "^0.2.4",
		"wireit": "^0.14.12"
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"start:server": "wireit"
	},
	"wireit": {
		"dev": {
			"service": true,
			"command": "vite --host",
			"dependencies": [
				"vuc"
			]
		},
		"build": {
			"command": "vite build",
			"files": [
				"./vite.config.ts",
				"./src",
				"./index.html",
				"./public"
			],
			"output": []
		},
		"build:server": {
			"command": "tsc -p ./tsconfig.server.json",
			"clean": "if-file-deleted",
			"files": [
				"./src/server/",
				"./tsconfig.server.json",
				"./types.d.ts"
			],
			"output": [
				"./lib/server/"
			]
		},
		"start:server": {
			"service": true,
			"command": "node ./lib/server/server.js",
			"dependencies": [
				"build:server"
			]
		},
		"vuc": {
			"service": true,
			"command": "vuc",
			"files": [
				"./.vuc.json"
			]
		}
	},
	"dependencies": {
		"@vdegenne/koa": "^0.1.3",
		"@vdegenne/server-helpers": "^0.2.2"
	}
}
